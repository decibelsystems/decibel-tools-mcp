{
  "name": "decibel-tools-mcp",
  "version": "1.0.2",
  "description": "MCP server exposing Decibel tools (Designer, Architect, Sentinel, Oracle) over stdio",
  "main": "dist/server.js",
  "type": "module",
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "tsx src/server.ts",
    "start": "node dist/server.js",
    "test": "vitest run",
    "test:unit": "vitest run tests/unit",
    "test:int": "vitest run tests/integration",
    "test:e2e": "vitest run tests/e2e",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:quick": "tsx src/test.ts",
    "lint": "tsc --noEmit"
  },
  "keywords": [
    "mcp",
    "decibel",
    "tools",
    "designer",
    "architect",
    "sentinel",
    "oracle"
  ],
  "author": "Decibel Systems",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.0",
    "@supabase/supabase-js": "^2.89.0",
    "express": "^5.2.1",
    "pg": "^8.16.3",
    "yaml": "^2.8.2"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/pg": "^8.16.0",
    "@vitest/coverage-v8": "^2.1.0",
    "tsx": "^4.7.0",
    "typescript": "^5.3.0",
    "vitest": "^2.1.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
