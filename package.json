{
  "name": "@decibelsystems/tools",
  "version": "2.0.1",
  "bin": {
    "decibel-tools": "dist/server.js"
  },
  "description": "MCP server for project intelligence. 26 facade tools (170+ internal handlers) across 20 domains: work tracking, architecture, experiments, design, git forensics, agent coordination, and more.",
  "main": "dist/server.js",
  "type": "module",
  "exports": {
    ".": "./dist/server.js",
    "./client": "./dist/client/index.js"
  },
  "files": [
    "dist",
    "templates",
    "README.md",
    "LICENSE"
  ],
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsx src/server.ts",
    "start": "node dist/server.js",
    "start:http": "node dist/server.js --http",
    "start:daemon": "node dist/server.js --daemon",
    "start:bridge": "node dist/server.js --bridge",
    "test": "vitest run",
    "test:unit": "vitest run tests/unit",
    "test:int": "vitest run tests/integration",
    "test:e2e": "vitest run tests/e2e",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:quick": "tsx src/test.ts",
    "lint": "tsc --noEmit",
    "ext:build": "cd extension && npm run build",
    "ext:watch": "cd extension && npm run watch",
    "ext:package": "cd extension && npm run package",
    "ext:install": "cd extension && npm run install-ext"
  },
  "keywords": [
    "mcp",
    "decibel",
    "tools",
    "designer",
    "architect",
    "sentinel",
    "oracle"
  ],
  "author": "Decibel Systems",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.0",
    "@supabase/supabase-js": "^2.89.0",
    "express": "^5.2.1",
    "pg": "^8.16.3",
    "yaml": "^2.8.2"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/pg": "^8.16.0",
    "@vitest/coverage-v8": "^2.1.0",
    "tsx": "^4.7.0",
    "typescript": "^5.3.0",
    "vitest": "^2.1.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
